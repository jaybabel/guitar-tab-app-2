<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jay's Guitar Tab App</title>
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <header>
        <h1>Welcome to Jay's Fabulous Guitar Tab Database Application</h1>
        <a href="/users/login">Admin login</a>
    </header>
    <main>
        <div id="searchCriteria">
            <h2>Search Tabs by:</h><br>

        <form action="/tabs/search" method="POST">                
            <label for="tabTitle">&nbsp&nbsp&nbspTitle</label>
            <select name="tabTitle" id="tabTitle">
                <option value=""></option>
                <% for(let i=0; i <tabs.length; i++) { %>
                    <option value="tabTitle"><%= tabs[i].tabTitle %></option>
                <% } %>
            </select>
            <button type="button">Search</button>
        </form>


            <label for="artist">&nbsp&nbsp&nbsp&nbsp&nbspArtist</label>
            <select name="artist" id="artist">
                <option value=""></option>
                <% for(let i=0; i <artists.length; i++) { %>
                <option value="artist"><%= artists[i].artistName %></option>
                <% } %>
            </select>
            <br>
            <label for="difficulty">Difficulty</label>
            <select class="dropdown" name="difficulty" id="difficulty">
                <option value=""></option>
                <option value="Easy">Easy</option>
                <option value="Moderate">Moderate</option>
                <option value="Difficult">Difficult</option>
            </select>
            <br>
            <label for="genre">&nbsp&nbsp&nbsp&nbsp&nbsp&nbspGenre</label>
            <select class="dropdown" name="genre" id="genre">
                <option value=""></option>
                <option value="Pop">Pop</option>
                <option value="Folk/Traditional">Folk/Traditional</option>
                <option value="Rock">Rock</option>                
                <option value="Country">Country</option>
                <option value="Easy Listening">Easy Listening</option>
                <option value="Holiday">Holiday</option>                
            </select>
            <br>
            <label for="rating">&nbsp&nbsp&nbsp&nbsp&nbspRating</label>
            <select class="dropdown" name="rating" id="rating">
                <option value=""></option>
                <option value="5">5</option>
                <option value="4">4</option>
                <option value="3">3</option>
                <option value="2">2</option>
                <option value="1">1</option>
            </select>
            <br>
            <label for="tuning">&nbsp&nbsp&nbsp&nbsp&nbspTuning</label>
            <select class="dropdown" name="tuning" id="tuning">
                <option value=""></option>
                <% for(let i=0; i <tunings.length; i++) { %>
                <option value="tuning"><%= tunings[i].tuningName %></option>
                <% } %>
            </select>
            <br>
            <br><br>
            <button type="button">Search</button>
            <br><br>
        </div>

        <div id="searchResults">
            <h2>Search Results</h2>
            <div id="resultsList">
               <ul>
                   <% for(let i=0; i <tabs.length; i++) { %>
                       <% let j = tabs[i].artist - 1; %>
                            <% let k = tabs[i].tuning - 1; %>
                        <li>
                            <a href="/tabs/<%= tabs[i].id %>">
                                <%= tabs[i].tabTitle %> | <%= j  %> | <%= tabs[i].difficulty %> | <%= tabs[i].genre %> | <%= tabs[i].rating %> | <%= tunings[k].tuningName %>
                            </a>
                        </li>                        
                    <% } %>
                </ul>
            </div>
        </div>
        <br><br>

    </main>
    <footer>
        <a href="/tabs/new">New Tab Page</a>
        <br><br>
    </footer>
</body>

</html>