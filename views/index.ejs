<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jay's Guitar Tab App</title>
    <link rel="stylesheet" href="/css/app.css">
</head>

<body>
    <header>
        <h1>Welcome to Jay's Fabulous Guitar Tab Database Application</h1>
        <a href="/users/login">Admin login</a>
    </header>
    <main>
        <div id="searchCriteria">
            <h2>Search Tabs by:</h2>
            <label for="tabTitle">Title</label>
            <select name="tabTitle" id="tabTitle">
                <% for(let i=0; i <tabs.length; i++) { %>
                    <option value="tabTitle"><%= tabs[i].tabTitle %></option>
                <% } %>
            </select>
            <br>
            <label for="artist">Artist:</label>
            <select name="artist" id="artist">
                <% for(let i=0; i <artists.length; i++) { %>
                <option value="artist"><%= artists[i].artistName %></option>
                <% } %>
            </select>
            <br>
            <label for="difficulty">Difficulty</label>
            <select name="difficulty" id="difficulty">
                <option value="difficulty">Easy</option>
                <option value="difficulty">Moderate</option>
                <option value="difficulty">Difficult</option>
            </select>
            <br>
            <label for="genre">Genre</label>
            <select name="genre" id="genre">
                <option value="genre">Pop</option>
                <option value="genre">Folk/Traditional</option>
                <option value="genre">Rock</option>                
                <option value="genre">Country</option>
                <option value="genre">Easy Listening</option>
                <option value="genre">Holiday</option>                
            </select>
            <br>
            <label for="rating">Rating</label>
            <select name="rating" id="rating">
                <option value="rating">5</option>
                <option value="rating">4</option>
                <option value="rating">3</option>
                <option value="rating">2</option>
                <option value="rating">1</option>
            </select>
            <br>
            <label for="tuning">Tuning:</label>
            <select name="tuning" id="tuning">
                <% for(let i=0; i <tunings.length; i++) { %>
                <option value="tuning"><%= tunings[i].tuningName %></option>
                <% } %>
            </select>
            <br>
            <br><br>
            <button type="button">Search</button>
            <br><br>
        </div>
        <div id="searchResults">
            <h2>Search Results</h2>
            <div id="resultsList">
               <ul>
                   <% for(let i=0; i <tabs.length; i++) { %>
                       <% let j = tabs[i].artist - 1; %>
                            <% let k = tabs[i].tuning - 1; %>
                        <li>
                            <a href="/tabs/<%= tabs[i].id %>">
                                <%= tabs[i].tabTitle %> | <%= artists[j].artistName %> | <%= tabs[i].difficulty %> | <%= tabs[i].genre %> | <%= tabs[i].rating %> | <%= tunings[k].tuningName %>
                            </a>
                        </li>                        
                    <% } %>
                </ul>
            </div>
        </div>
        <br><br>

    </main>
    <footer>

        <br><br>
    </footer>
</body>

</html>